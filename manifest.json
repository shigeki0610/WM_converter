{
    // 拡張機能の定義
    "manifest_version": 2,  // マニフェストのバージョン ※"2"を指定
    "name": "WM_converter",       // 拡張機能の名称
    "version": "1.0",       // 拡張機能のバージョン
 
    "description": "ファイルパス変換ツール",  // 拡張機能の概要
 
    // アイコンの設定
    "icons": {
        "32": "icons/icon.png"         // 16×16[px]アイコンファイルのパス
    },

    "browser_action": {
        "default_icon": {
        "32": "icons/icon.png"
        }
    },

    "background":{
        "scripts": ["main.js"],
        "persistent": false
    }

}